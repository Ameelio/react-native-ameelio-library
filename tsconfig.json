{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "rootDirs": ["src", "stories"],
    "baseUrl": ".",
    "paths": {
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "node_modules/expo/build",
    "test"
  ],
  "includes": ["./typings.d.ts"],
  "typeRoots": ["node_modules/@types", "./typings.d.ts"]
}
