{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": false,
    "jsx": "react",
    "lib": ["es2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@assets": ["assets"],
      "@assets/*": ["assets/*"],
      "@navigations": ["src/navigations"],
      "@navigations/*": ["src/navigations/*"],
      "@src": ["src"],
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "node_modules/expo/build",
    "test"
  ],
  "includes": ["./typings.d.ts"],
  "typeRoots": ["node_modules/@types", "./typings.d.ts"]
}
